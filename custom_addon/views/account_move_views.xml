<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_xero" model="ir.ui.view">
        <field name="name">account.move.form.inherit.xero</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header position="inside">
                <button name="action_push_bill_to_xero" type="object" string="Push to Xero" class="oe_highlight" invisible="move_type != 'in_invoice'"/>
            </header>
            <notebook position="inside">
                <page string="Xero" name="xero_tab" invisible="move_type != 'in_invoice'">
                    <group>
                        <field name="xero_invoice_id"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
